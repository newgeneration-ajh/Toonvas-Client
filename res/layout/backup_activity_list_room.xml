<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/room_back" >
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="130dip"
        android:layout_marginRight="130dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_num_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="#87ceeb"
            android:text="번호"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_title_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:background="#87ceeb"
            android:text="제목"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_maker_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="#87ceeb"
            android:text="방장"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_count_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="#87ceeb"
            android:text="인원수"
            android:textSize="30sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_room"
        android:layout_width="match_parent"
        android:layout_height="500dip"
        android:layout_marginLeft="130dip"
        android:layout_marginRight="130dip" >
    </ListView>

    <ImageButton
        android:id="@+id/btn_room"
        android:layout_width="200dip"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/btn_room_make"
        android:background="#00000000"
        android:text="방 만들기" />




</LinearLayout>